{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "types": ["node", "jest"]
  },
  "include": ["tests/**/*", "src/**/*"],
  "exclude": ["node_modules", "build"]
}
